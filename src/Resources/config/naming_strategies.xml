<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Route Naming Strategy -->
        <service id="elastic_apm.naming_strategy.route" class="ElasticApmBundle\TransactionNamingStrategy\RouteNamingStrategy"/>

        <!-- Controller Naming Strategy -->
        <service id="elastic_apm.naming_strategy.controller" class="ElasticApmBundle\TransactionNamingStrategy\ControllerNamingStrategy"/>

        <!-- URI Naming Strategy -->
        <service id="elastic_apm.naming_strategy.uri" class="ElasticApmBundle\TransactionNamingStrategy\UriNamingStrategy"/>

        <!-- Service Naming Strategy -->
        <service id="elastic_apm.naming_strategy.service" class="ElasticApmBundle\TransactionNamingStrategy\ServiceNamingStrategy">
            <argument>%elastic_apm.service.name%</argument>
        </service>

        <!-- Message Naming Strategy -->
        <service id="elastic_apm.naming_strategy.message" class="ElasticApmBundle\TransactionNamingStrategy\MessageNamingStrategy"/>

        <!-- Default naming strategy alias will be set by Extension based on configuration -->
    </services>
</container>